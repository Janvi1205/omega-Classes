rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to notifications collection for all users
    match /notifications/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to teachers collection for authenticated users
    match /teachers/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to materials collection for all users
    match /materials/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to assignments collection for all users
    match /assignments/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}






